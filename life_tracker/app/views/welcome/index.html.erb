<h1>Listing people</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
    <tr>
      <td><%= person.name %></td>
      <td><%= link_to 'Show', person %></td>
      <td><%= link_to 'Edit', edit_person_path(person) %></td>
      <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1>Listing schools</h1>

<table>
  <thead>
    <tr>
      <th>School name</th>
      <th>Beginning date</th>
      <th>Ending date</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.order(:beginning_date).each do |school| %>
    <tr>
      <td><%= school.school_name %></td>
      <td><%= school.beginning_date %></td>
      <td><%= school.ending_date %></td>
      <td><%= school.city %></td>
      <td><%= school.state %></td>
      <td><%= school.country %></td>
      <td><%= school.person %></td>
      <td><%= link_to 'Show', school %></td>
      <td><%= link_to 'Edit', edit_school_path(school) %></td>
      <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

