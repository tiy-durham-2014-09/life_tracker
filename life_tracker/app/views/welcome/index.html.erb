<h1> Greetings </h1>

<h1>Listing people</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1>Listing schools</h1>

<table>
  <thead>
    <tr>
      <th>School name</th>
      <th>Beginning date</th>
      <th>Ending date</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
    <tr>
      <td>
        <% if school.person %>
        <%= link_to school.person, school.person %>
        <% end %>
        <td><%= school.school_name %></td>
        <td><%= school.beginning_date %></td>
        <td><%= school.ending_date %></td>
        <td><%= school.city %></td>
        <td><%= school.state %></td>
        <td><%= school.country %></td>
        <td><%= school.person %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <h1>Listing life_events</h1>

  <table>
    <thead>
      <tr>
        <th>Event</th>
        <th>Date</th>
        <th>Description</th>
        <th>Person</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @life_events.each do |life_event| %>
