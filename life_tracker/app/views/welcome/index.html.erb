<h1> Greetings </h1>

<h1>Listing schools</h1>

<table>
  <thead>
    <tr>
      <th>School name</th>
      <th>Beginning date</th>
      <th>Ending date</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
    <tr>
      <td><%= school.school_name %></td>
      <td><%= school.beginning_date %></td>
      <td><%= school.ending_date %></td>
      <td><%= school.city %></td>
      <td><%= school.state %></td>
      <td><%= school.country %></td>
      <td><%= link_to 'Show', school %></td>
      <td><%= link_to 'Edit', edit_school_path(school) %></td>
      <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>


<h1>Listing life_events</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Date</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @life_events.each do |life_event| %>
    <tr>
      <td><%= life_event.event %></td>
      <td><%= life_event.date %></td>
      <td><%= life_event.description %></td>
      <td><%= link_to 'Show', life_event %></td>
      <td><%= link_to 'Edit', edit_life_event_path(life_event) %></td>
      <td><%= link_to 'Destroy', life_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

