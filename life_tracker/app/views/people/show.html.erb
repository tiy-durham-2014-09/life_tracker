<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @person.name %>
</p>


<p>
  <strong>Life Events:</strong>
  <ul>
    <% @person.life_events.each do |life_event| %>
      <li>
        <%= life_event.title %>: <%= life_event.date %>: <%= life_event.description %>
        <%= link_to "Edit", edit_person_path(life_event) %>
      </li>
    <% end %>
  </ul>
</p>

<p>
  <strong>Life Events:</strong>
  <ul>
    <% @person.schools.each do |school| %>
      <li>
        <%= school.title %>: <%= school.start_date %>: <%= school.end_date %>
        <%= link_to "Edit", edit_person_path(school) %>
      </li>
    <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_person_path(@person) %> |
