        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :beginning_year %><br>
        <%= f.number_field :beginning_year %>
      </div>
      <div class="field">
        <%= f.label :ending_year %><br>
        <%= f.number_field :ending_year %>
      </div>
      <div class="actions">
        <%= f.submit(class: "button") %>
      </div>
    </div>
  </div>
<% end %>
