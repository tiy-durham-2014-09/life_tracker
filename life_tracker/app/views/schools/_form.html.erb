<%= form_for @school, builder: Foundation::FormBuilder::Rails::FormBuilder  do |f| %>
  <div class="row">
    <div class="large-12 columns">
      <% if @school.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@school.errors.count, "error") %> prohibited this school from being saved:</h2>

          <ul>
          <% @school.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :person_id %><br>
        <%= f.collection_select :person_id, Person.all, :id, :name, :include_blank => true %>
