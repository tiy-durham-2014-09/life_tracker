<h1>Welcome</h1>
<h2>Latest Life Event Added</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @life_events.each do |life_event| %>
      <tr>
        <td><%= life_event.title %></td>
        <td><%= life_event.year %></td>
        <td><%= life_event.description %></td>
        <td><%= link_to 'Show', life_event %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
  <h2>Latest Schools Added</h2>
  <table>
  <thead>
    <tr>
      <th>Person</th>
      <th>Name</th>
      <th>Beginning year</th>
      <th>Ending year</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th colspan="7"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td>
          <% if school.person %>
            <%= link_to school.person, school.person %>
          <% end %>
        </td>
        <td><%= school.name %></td>
        <td><%= school.beginning_year %></td>
        <td><%= school.ending_year %></td>
        <td><%= school.city %></td>
        <td><%= school.state %></td>
        <td><%= school.country %></td>
        <td><%= link_to 'Show', school %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  <p><%= link_to 'Life_Events', life_events_path %></p>
  <p><%= link_to 'Schools', schools_path %></p>
  <p><%= link_to 'People', people_path %></p>
