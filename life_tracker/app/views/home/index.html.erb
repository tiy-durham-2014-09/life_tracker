<h1> Home 'n stuff </h1>
<p> Life and school and school and life. And now people.</p>

<h1>Listing people</h1>
<table>
	<thead>
		<tr>
			<th>Name</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @people.each do |person| %>
			<tr>
				<td><%= person.name %></td>
				<td><%= link_to 'Show', person %></td>
				<td><%= link_to 'Edit', edit_person_path(person) %></td>
				<td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>


<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Beginningyear</th>
			<th>Endingyear</th>
			<th>Person</th>
			<th colspan="3"></th>
		</tr>
	</thead>
<br>
	<tbody>
		<% @schools.order(:endingYear).reverse_order.each do |school| %>
			<tr>
				<td><%= school.name %></td>
				<td><%= school.beginningYear %></td>
				<td><%= school.endingYear %></td>
				<td><%= school.person.name %></td>
				<td><%= link_to 'Show', school %></td>
				<td><%= link_to 'Edit', edit_school_path(school) %></td>
				<td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>
<br>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Year</th>
			<th>Description</th>
			<th>Person</th>
			<th colspan="3"></th>
		</tr>
	</thead>
<br>
	<tbody>
		<% @life_events.order(:year).each do |life_event| %>
			<tr>
				<td><%= life_event.title %></td>
				<td><%= life_event.year %></td>
				<td><%= life_event.description %></td>
				<td><%= life_event.person.name %>
				<td><%= link_to 'Show', life_event %></td>
				<td><%= link_to 'Edit', edit_life_event_path(life_event) %></td>
				<td><%= link_to 'Destroy', life_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>



<%= link_to 'Life Events', life_events_path %>
<%= link_to 'Schools', schools_path %>
<%= link_to 'People', people_path %>
