<h1>Listing Life Events</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Date</th>
      <th>Description</th>
      <th>Person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @life_events.each do |life_event| %>
    <tr>
        <td><%= life_event.event %></td>
        <td><%= life_event.date %></td>
        <td><%= life_event.description %></td>
        <td>
          <% if life_event.person %>
          <%= link_to life_event.person, life_event.person %>
          <% end %>
        <td><%= link_to 'Show', life_event %></td>
        <td><%= link_to 'Edit', edit_life_event_path(life_event) %></td>
        <td><%= link_to 'Destroy', life_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  | <%= link_to 'New Life Event', new_life_event_path %> |
  <%= link_to 'Home', root_path %> |
  <%= link_to 'Schools', schools_path %> |
  <%= link_to 'People', people_path %> |
